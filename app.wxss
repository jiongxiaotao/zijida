/**app.wxss**/
/* 滚动条样式隐藏 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 页面主内容 */
.container {
  background: #ddd;
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  color: black;
  font-size: 32rpx;
} 

/*顶部自定义导航样式，可公用*/
.navbar{ 
 flex: none; 
 display: flex; 
 background: #eeeeee; 
 z-index: 900; 
} 
.navbar .item{ 
 position: relative; 
 flex: auto; 
 text-align: center;
 line-height: 80rpx; 
 font-size: 30rpx;
 color: #666666;
 font-family: Microsoft YaHei;
} 
.navbar .item.active{ 
 color: #59e;
 font-family: Microsoft YaHei;
 font-weight: bold;
} 
.navbar .item.active:after{ 
 content: ""; 
 display: block; 
 position: absolute; 
 bottom: 0; 
 left: 0; 
 right: 0; 
 height: 4rpx; 
 background: #59e;
 font-size: 24rpx;
 color: #666666;
 font-family: Microsoft YaHei;
}
/* 输入框样式 */
input{
  width:90%;
  line-height:70px;
  height:70rpx;
  border:1px solid #6af;
  border-radius:8rpx;
  margin-bottom:20rpx;
  margin:20rpx auto;
}

.placeholder{
  color: #555
}

button{
  padding: 0;
  color: white;
  width: 90%;
  line-height: 80rpx;
  background: #59e;
}
button:hover{
  color: white;
  background: #6af;
}

/* 全局遮罩 */
.mask{
  width:100%;
  height:100%;
  z-index:999;
  position:fixed;
  background: rgba(0,0,0,0.5);
  
}
.mask view{
  background: #cef;
}