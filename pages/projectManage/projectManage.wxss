.projectManageTip{
  background: rgb(253, 124, 124);
  color: white;
  font-size:24rpx;
  line-height: 40rpx;
  text-align: center;
}
.listScroll{
  height: 100%;
}
.list{
  margin-bottom: 120rpx;
}
.listItem{
  padding:30rpx;
  line-height: 40rpx;
  background: #cef; 
  border:white solid 1px;
  margin: 0 10rpx;
  margin-top: 30rpx; 
}
.type_p{
  background: #cef !important; 
}
.type_t{
  background: lightgreen !important; 
}
.type_w{
  background: pink !important; 
}
.listItem .textContent{
  display: inline-block;
  width: 90%;
  line-height: 56rpx;
}
.listItem .itemLabel{
  float: left;
  display: inline-block;
  width: 30%;
}
.listItem .itemText{
  display: inline-block;
  width: 70%;
  font-weight: bold;
  word-wrap: break-word;
}
.listItem .itemShortLabel{
  float: left;
  display: inline-block;
  width: 20%;
}
.listItem .itemShortText{
  display: inline-block;
  float: left;
  width: 30%;
  font-weight: bold;
  word-wrap: break-word;
}
.notPublish{
  color: #666;
}
.published{
  color:darkblue;
}
.scoring{
  color:orange
}
.done{
  color:green;
}
.progress{
  width: 55%;
  line-height:40rpx;
  float:left;
  margin: 10rpx;
}
.progressText{
  position:absolute;
  display:inline-block;
  left:48%;
  margin-top:-20rpx;
  color: orange;
  font-weight: bold;
}
/* 一键复制 */
.listItem .copy{
  margin-top:28rpx;
  width:10%;
  float:right;
}
.listItem .copy image{
  width: 60rpx;
  height: 60rpx;
}
.listItem .copy text{
  height:20px;
  line-height:20px;
  text-align:center;
  float: left;
}
/* 添加评分项目 */
.addProject{
  padding:30rpx;
  color:white;
  line-height:50rpx;
  background:#59e;
  position:fixed;
  right:20rpx;
  bottom:120rpx;
  width:160rpx;
  height:160rpx;
  border-radius:80rpx;
}
/* 复制项目提示弹框 */
.popBox{
  position:absolute;
  width:100%;
  top:25%;
  background: #cef;
  padding: 0 0 60rpx 0;
}
.popBox .title{
  background: rgb(2, 96, 211);
  color: white;
  font-size: 38rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-weight: bold;
}
.popBox .tipContent{
  color: red;
  padding: 20rpx 40rpx;
}
.popBox input{
  margin-bottom: 20rpx;
  width: 90%;
}
.popBox button{
  width: 40%;
  margin: 0 5%;
  float: left;
  display: inline-block;
}
