/* pages/index/index.wxss */
.avatar{
  width:180rpx;
  height:180rpx;
  border-radius:50%;
  margin:80rpx auto;
}
.tipLight{
  line-height:40rpx;
  height:40rpx;
  font-size:36rpx;
  color:#59e;
  text-align: center;
}
.voiceMessage{
  position:absolute;
  bottom:100rpx;
  right:-190px;
  width:250px;
  height:62px;
  border:1px solid white;
  border-radius:31px;
  z-index: 99;
}
.cancleTip{
  position:absolute;
  top:-100rpx;
  left:-40rpx;
  text-align:center;
}
.cancleTip .cancleTipImg{
  width:200rpx;
  height:60rpx;
}
.voiceMessage .voiceButton{
  height:60px;
  width:60px;
  float:left;
  display:inline-block;
  margin-left:2px;
}
.voiceMessage  .text{
  line-height:29px;
  margin:2px;
  width: 120px;
  font-size: 30rpx;
  float: left;
}
.voiceMessage .hideVoiceMessageView{
  display:inline-block;
  float:left;
  line-height:60px;
  margin-top: 10px;
}
.voiceMessage .hideVoiceMessage{
  width:30px;
  height: 30px;
  margin: 0 10rpx;
}
.main{
  height: 100%;
  width:100%;
  position: absolute;
  top: 500rpx;
}
#inviteCode{
  margin-bottom: 60rpx;
  width: 90%;
}
.submit{
  width: 90%;
}
.weatherInfo{
  position:absolute;
  left:40rpx;
  top: 10rpx;
  color:#59e;
}
.weatherInfo image{
  width:20rpx;
  height: 20rpx;
  margin: 0 10rpx;
}
.weatherDetail{
  color:white;
  position:absolute;
  padding:10rpx;
  top:60rpx;
  left:20px;
  border:1px solid #59e;
  background:rgba(2, 62, 131, 0.5);
  text-align:left;
}
.weatherDetail image{
  width:20rpx;
  height:20rpx;
  margin: 10rpx 10rpx;
  float:right;
}
.helpButton{
  position:absolute;
  right:10rpx;
  top: 10rpx;
}
.helpButton image{
  width: 40rpx;
  height: 40rpx;
}
/* 复制项目提示弹框 */
.helpBox{
  position:absolute;
  width:80%;
  height: 80%;
  top:10%;
  left: 10%;
  background: white;
  padding:0 80rpx;
  box-sizing: border-box;
}
.helpSwiper{
  height: 80%;
  margin-top: 20%;
}
.helpBox .start{
  position:absolute;
  bottom:10%;
  width:100%;
}